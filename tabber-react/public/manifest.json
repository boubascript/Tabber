{
  "manifest_version": 2,
  "name": "Tabber React",
  "description": "This extension opens tabs in your browser when you need them",
  "version": "1.0",
  "icons": {
    "16": "favicon.ico"
  },
  "browser_action": {
    "default_icon": "tabberlogo.png",
    "default_popup": "index.html",
    "default_title": "Need this later?"
  },

  "content_security_policy": "script-src 'self' 'sha256-kqkfEZ6Y7q75kUR1WzWwJUxg9YfWBsyXbywdsHYvsgE='; object-src 'self'",

  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "alarms",
    "tabs",
    "sessions",
    "contextMenus",
    "storage"
  ]
}
